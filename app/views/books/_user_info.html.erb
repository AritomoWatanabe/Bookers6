<h2>User info</h2>

	<%= attachment_image_tag user, :profile_image, size:'60x60', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

	<table class = "table">
		<tbody>
		<tr>
			<th>name</th>
    		<th><%= user.name %></th><br>
    	</tr>
    	<tr>
    		<th>introduction</th>
    		<th><%= user.introduction %></th>
    	</tr>
    	</tbody>
    </table>

    <% if user.id == current_user.id %>
    	<%= link_to edit_user_path(user), class: "btn btn-primary form-control" do %>
        <i class="fas fa-wrench" %></i>
        <% end %>
    <% end %>