<script src="https://kit.fontawesome.com/ed00617fa7.js" crossorigin="anonymous"></script>


<%= render 'books/header_all' %>

<div class = "container">

<% if @book.errors.any? %>
  <div class="alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= "error" +" "+ message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class= "col-md-6 col-md-offset-3">

<from class="edit_book">
<h1>Editing Book </h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <div class="field row"><label for="book_title">Title</label>
   	<%= f.text_field :title %>
	</div>

    <div class="field row"><label for="book_opinion">Opinion</label>
    <%= f.text_area :body %></div>

    <div class="actions row">

    <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">

<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>

</from>

</div>

</div>



    <footer>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
