<script src="https://kit.fontawesome.com/ed00617fa7.js" crossorigin="anonymous"></script>


<%= render 'books/header_all' %>


<body>

<P class = "message"><%= flash[:update] %></P>

<% if @book.errors.any? %>
  <div class="alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= "error" +" "+ message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class = "container">

<div class = "row">

<div class = "col-xs-3">


<%= render 'books/user_info', user: @user %>

<h2>New book</h2>

<%= form_for(@book, url: '/books') do |f| %>



<div class="field">
  <p class= "new-title">Titel</p>
  <%= f.text_field :title %>
</div>

<div class="field">
  <p class= "new-body">Body</p>
  <%= f.text_area :body %>
</div>

  <%= f.submit('Create Book',class: "btn btn-primary form-control") %>

<% end %>

</div>

<div class= "col-xs-9">

<h1>Books</h1>

<table class = "table table-hover table-inverse">
	<thead>
		<tr>
			<th> </th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @books.each do |book| %>
		<tr>
		<td><%= link_to user_path(book.user) do %>
    <%= attachment_image_tag book.user, :profile_image, size:'60x60', fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
    <% end %>
		<td><%= link_to book.title, "/books/#{book.id}" %></td>
		<td><%= book.body %></td>
    </tr>
    <% end %>
		</tbody>



</table>

</div>

</div>

</div>


</body>

