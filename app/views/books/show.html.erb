<script src="https://kit.fontawesome.com/ed00617fa7.js" crossorigin="anonymous"></script>


<%= render 'books/header_all' %>

<body>

<div class = "container">

<div class = "row">

<div class = "col-xs-3">

<P class = "message"><%= flash[:update] %></P>
<P class = "message"><%= flash[:create] %></P>


<%= render 'books/user_info', user: @user %>

<%= render 'books/new_book', book: @book_new %>



</div>

<div class= "col-xs-9">

<h1>Book detail</h1>

<table class ="table">

	<tbody>
		<tr>
		<td><%= attachment_image_tag @book.user, :profile_image, size:'60x60', fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
      <%= link_to @book.user.name, user_path(@book.user.id) %></td>
		<td><%= @book.title %></td>
		<td><%= @book.body %></td>

		<% if @book.user == current_user %>
		<td><%=link_to "Edit", edit_book_path(@book.id)%></td>
		<% end %>

		<% if @book.user == current_user %>
		<td><%=link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
		<% end %>


		</tr>
		</tbody>

	</tbody>
</table>

</div>

</div>

</div>

