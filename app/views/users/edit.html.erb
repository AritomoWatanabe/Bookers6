<script src="https://kit.fontawesome.com/ed00617fa7.js" crossorigin="anonymous"></script>


<%= render 'books/header_all' %>

<div class = "container">

<% if @user.errors.any? %>
  <div class="alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= "error" +" "+ message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>User info</h1>

<%= form_for(@user) do |f| %>

        <h4>Name</h4>
        <%= f.text_field :name %>
        <h4>Introduction</h4>
        <%= f.text_area :introduction %>

        <%= attachment_image_tag @user, :profile_image, size:'60x60', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>

        <h4>Image</h4>
    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <%= f.submit "Update User"%>
<% end %>

</div>