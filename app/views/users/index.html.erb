<script src="https://kit.fontawesome.com/ed00617fa7.js" crossorigin="anonymous"></script>


<%= render 'books/header_all' %>


<div class = "container">

<div class = "row">

<div class = "col-xs-3">


<%= render 'books/user_info', user: @user %>


<%= render 'books/new_book', book: @book %>





</div>


<div class= "col-xs-9">

<h1>Users</h1>

<table class="table">

	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
		<td><%= attachment_image_tag user, :profile_image, size:'60x60', fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
		<td><%= link_to user.name, "/users/#{user.id}" %></td>
		<td><%= link_to "Show", "/users/#{user.id}" %></td>
		</tr>
	<% end %>
	</tbody>


</table>

</div>

</div>

</div>

